<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.30.xsd">

    <changeSet id="1758351467702-1" author="m.potapov">
        <comment>Created the users table.</comment>
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="short_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="is_confirmed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1758352212336-1" author="m.potapov">
        <comment>Created the user_credentials table.</comment>
        <createTable tableName="user_credentials">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_credentials"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_credentials_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <createIndex tableName="user_credentials" indexName="index_user_credentials_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="1758352570537-1" author="m.potapov">
        <comment>Created the confirmation_codes table.</comment>
        <createTable tableName="confirmation_codes">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="confirmation_codes"
                                 baseColumnNames="user_id"
                                 constraintName="fk_confirmation_codes_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="1758359683096-1" author="m.potapov">
        <comment>Created the organizations table.</comment>
        <createTable tableName="organizations">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="creator_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="organizations"
                                 baseColumnNames="creator_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_organizations_users"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="1758359628483-1" author="m.potapov">
        <comment>Created the events table.</comment>
        <sql>CREATE TYPE ev_category AS ENUM ('PLACEHOLDER')</sql>
        <sql>CREATE TYPE ev_status AS ENUM ('DRAFT', 'PLANNED', 'ENDED', 'CANCELED')</sql>
        <createTable tableName="events">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="start_datetime" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="end_datetime" type="TIMESTAMPTZ"/>
            <column name="updated_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="organizer_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="UUID"/>
            <column name="event_category" type="ev_category">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="route" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="is_free" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="is_open" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="event_status" type="ev_status">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="is_with_register" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="people_limit" type="INT"/>
            <column name="register_end_datetime" type="TIMESTAMPTZ"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="events"
                                 baseColumnNames="organizer_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_events_users"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="events"
                                 baseColumnNames="organization_id"
                                 referencedTableName="organizations"
                                 referencedColumnNames="id"
                                 constraintName="fk_events_organizations"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>